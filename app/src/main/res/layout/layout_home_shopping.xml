<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="@dimen/comment_8_dip"
                tools:layout_editor_absoluteY="@dimen/comment_8_dip">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/comment_200_dip"
                    android:src="@drawable/icon_full_chanpin" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_setting_breake">

                    <TextView
                        android:id="@+id/full_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView"
                        android:layout_alignBottom="@+id/textView"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/comment_28_dip"
                        android:drawableLeft="@drawable/icon_full_minbi"
                        android:text="58"
                        android:textColor="#fff"
                        android:textSize="@dimen/comment_16_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="17dp"
                        android:layout_toEndOf="@+id/full_cash"
                        android:text="¥58"
                        android:textColor="#fff"
                        android:textSize="@dimen/comment_14_size" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/comment_3_dip"
                        android:layout_marginTop="@dimen/comment_5_dip"
                        android:text="纯色美甲"
                        android:textColor="#000"
                        android:textSize="@dimen/comment_14_size" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/fullname"
                        android:layout_below="@+id/fullname"
                        android:layout_marginTop="@dimen/comment_14_dip"
                        android:textSize="@dimen/comment_14_size"
                        android:text="服务时长：60分钟" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_time"
                        android:layout_alignBottom="@+id/tv_time"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/tv_time"
                        android:textSize="@dimen/comment_14_size"
                        android:text="已浏览：48次" />

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_above="@+id/textView4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/comment_25_dip"
                        app:srcCompat="@drawable/icon_full_fenxiang" />

                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/img_share"
                        android:text="分享"
                        android:layout_marginRight="@dimen/comment_15_dip"
                        android:textSize="@dimen/comment_12_size"
                         />

                    <TextView
                        android:id="@+id/tv_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_time"
                        android:layout_below="@+id/tv_time"
                        android:textSize="@dimen/comment_12_size"
                        android:text="2016年3月5日,算是第三次修改了,这个项目也算..." />

                    <TextView
                        android:id="@+id/fulltv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_brief"
                        android:layout_below="@+id/tv_brief"
                        android:layout_marginTop="@dimen/comment_28_dip"
                        android:text="评价（3）"
                        android:textColor="@color/alpha_violet00"
                        android:textSize="@dimen/comment_14_size"
                        />

                    <ImageView
                        android:id="@+id/fullimg_score"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/comment_20_dip"
                        android:layout_alignBottom="@+id/fulltv_comment"
                        android:layout_alignEnd="@+id/tv_brief"
                        app:srcCompat="@drawable/ic_sortrecyke_stars" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/fullimg_score"
                        android:layout_marginLeft="@dimen/comment_2_dip"
                        android:layout_toEndOf="@+id/fullimg_score"
                        android:text="4.5"
                        android:textSize="@dimen/comment_14_size" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/comment_10_dip"
                        android:src="@drawable/icon_full_right" />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/comment_14_dip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comment_5_dip">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/comment_10_dip"
                        android:src="@drawable/icon_full_right" />

                    <TextView
                        android:id="@+id/tv_private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/comment_3_dip"
                        android:text="私人顾问"
                        android:textSize="@dimen/comment_14_size"
                        android:textColor="#D288C4"/>

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_private"
                        android:layout_below="@+id/tv_private"
                        android:layout_marginStart="@dimen/comment_10_dip"
                        android:layout_marginTop="@dimen/comment_15_dip"
                        app:srcCompat="@drawable/icon_full_code" />

                    <TextView
                        android:id="@+id/tv_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_scanning"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/comment_10_dip"
                        android:text="2、点击这里可以复制公众号" />

                    <TextView
                        android:id="@+id/tv_scanning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/tv_click"
                        android:layout_alignTop="@+id/imageView19"
                        android:layout_marginTop="@dimen/comment_20_dip"
                        android:text="1、扫描二维码关注公众号" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/comment_70_dip"
                android:background="@color/color_d0d0d0"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_full_goods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="假一赔十"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/comment_12_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_full_gift" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="会员服务"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/comment_12_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_full_quanwei" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="权威鉴定"
                        android:textColor="@color/yellow"
                        android:textSize="@dimen/comment_12_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_full_goods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不支持七天退款"
                        android:textColor="#FFF1C606"
                        android:textSize="@dimen/comment_12_size" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:background="@color/color_d0d0d0">

                <View
                    android:id="@+id/view"
                    android:layout_width="@dimen/comment_1_dip"
                    android:layout_height="@dimen/comment_30_dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="70dp"
                    android:layout_marginTop="@dimen/comment_20_dip"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/comment_10_dip"
                    android:layout_marginTop="@dimen/comment_12_dip"
                    android:text="Dear Skin形象工作室" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tv_name"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/comment_10_dip"
                    android:text="江苏省苏州市虎丘区狮山路260号"
                    android:textSize="@dimen/comment_10_size" />


                <ImageView
                    android:id="@+id/fullimg_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_address"
                    android:layout_alignStart="@+id/view"
                    android:layout_alignTop="@+id/view"
                    android:layout_marginStart="@dimen/comment_20_dip"
                    app:srcCompat="@drawable/icon_full_dianhua" />

                <ImageView
                    android:id="@+id/fullimg_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/view"
                    android:layout_marginEnd="@dimen/comment_20_dip"
                    android:layout_marginTop="@dimen/comment_5_dip"
                    android:layout_toStartOf="@+id/view"
                    app:srcCompat="@drawable/icon_full_dingwei" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_boutique"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_address"
                android:layout_below="@+id/tv_address"
                android:layout_marginBottom="@dimen/comment_5_dip"
                android:layout_marginLeft="@dimen/comment_5_dip"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:text="精品推荐"
                android:textColor="@color/colorDeeppowder" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/full_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/ttv_ping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/comment_5_dip"
                    android:layout_marginTop="@dimen/comment_13_dip"
                    android:text="评价（3）" />

                <ImageView
                    android:id="@+id/img_pingfen"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comment_16_dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/ttv_ping"
                    android:layout_marginEnd="@dimen/comment_80_dip"
                    app:srcCompat="@drawable/ic_sortrecyke_stars" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/img_pingfen"
                    android:layout_alignTop="@+id/img_pingfen"
                    android:layout_marginBottom="@dimen/comment_10_dip"
                    android:layout_marginStart="@dimen/comment_40_dip"
                    android:text="4.5"
                    android:textSize="@dimen/comment_14_size" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/comment_5_dip">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/full_recyclertwo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/comment_3_dip" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>