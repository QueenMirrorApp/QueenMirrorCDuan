<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ceshila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/comment_0_dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/comment_150_dip"
                android:layout_height="@dimen/comment_100_dip"
                android:src="@drawable/icon_full_chanpin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sote_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="MOCO美容美发沙龙"
                    android:textColor="#000"
                    android:textSize="@dimen/comment_14_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left">

                    <TextView
                        android:textSize="@dimen/comment_12_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="苏州园区精致美甲店" />

                </LinearLayout>

                <TextView
                    android:textSize="@dimen/comment_12_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23人好评" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sort_time"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/comment_30_dip"
                        android:text="¥138"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/comment_16_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/comment_25_dip"
                        android:textSize="@dimen/comment_12_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/comment_50_dip"
                        android:layout_marginTop="@dimen/comment_5_dip"
                        android:text="¥268" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/comment_2_dip"
        android:layout_marginTop="@dimen/comment_5_dip"
        android:background="#4DC6C4C4" />


</LinearLayout>