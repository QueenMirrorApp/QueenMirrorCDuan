<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/icon_rectangle"
    android:layout_marginTop="@dimen/comment_10_dip"
    android:layout_marginLeft="@dimen/comment_10_dip"
    android:layout_marginRight="@dimen/comment_10_dip"
    android:layout_marginBottom="@dimen/comment_5_dip"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/comment_17_dip"
        android:layout_marginTop="15dp"
        android:text="10元优惠券"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/comment_15_dip"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/comment_20_dip"
        android:text="查看详情>>"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />
    <View
        android:layout_below="@+id/tv_discount"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:background="@drawable/dash_dashed_shape"
        android:layout_height="2dp"
        android:id="@+id/videoView2" />

    <TextView
        android:id="@+id/tv_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_discount"
        android:layout_below="@+id/videoView2"
        android:text="面值：" />

    <TextView
        android:id="@+id/tv_ten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10元"
        android:textColor="@color/alpha_95_black"
        android:textSize="@dimen/comment_18_size"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/tv_face"
        android:layout_toEndOf="@+id/tv_face" />

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_face"
        android:layout_below="@+id/tv_face"
        android:layout_marginTop="10dp"
        android:text="无条件使用" />

    <TextView
        android:id="@+id/tv_youxiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_no"
        android:layout_below="@+id/tv_no"
        android:layout_marginTop="@dimen/comment_3_dip"
        android:text="有效期：" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_youxiao"
        android:layout_toEndOf="@+id/tv_youxiao"
        android:text="2018.01.08~2018.03.08" />
    <View
        android:layout_below="@+id/tv_youxiao"
        android:layout_marginTop="@dimen/comment_10_dip"
        android:layout_marginBottom="@dimen/comment_5_dip"
        android:layout_marginLeft="@dimen/comment_20_dip"
        android:layout_marginRight="@dimen/comment_20_dip"
        android:layout_width="match_parent"
        android:background="@drawable/dash_dashed_shape"
        android:layout_height="2dp"
        android:id="@+id/view5" />

    <TextView
        android:id="@+id/tv_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_youxiao"
        android:layout_below="@+id/view5"
        android:text="相城区笑笑美发店全店专用" />

    <TextView
        android:id="@+id/tv_store"
        android:layout_marginBottom="@dimen/comment_10_dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_details"
        android:layout_below="@+id/tv_purpose"
        android:textColor="@color/colorPrimaryDark"
        android:text="进店看看>>" />

    <ImageView
        android:id="@+id/img_use"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view5"
        android:layout_below="@+id/tv_ten"
        android:layout_marginEnd="@dimen/comment_17_dip"
        app:srcCompat="@drawable/icon_mine_use" />
    <ImageView
        android:id="@+id/img_overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/view5"
        android:layout_below="@+id/tv_ten"
        android:layout_marginEnd="@dimen/comment_17_dip"
        app:srcCompat="@drawable/icon_mine_overdue" />
</RelativeLayout>