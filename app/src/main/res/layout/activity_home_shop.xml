<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/comment_200_dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_10_dip">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/comment_85_dip"
                    android:layout_height="@dimen/comment_25_dip"
                    android:src="@drawable/icon_home_ancrown" />
                <com.ainisi.queenmirror.queenmirrorcduan.utils.MarqueeView
                    android:id="@+id/marqueeview"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/comment_25_dip"
                    android:layout_marginRight="@dimen/comment_10_dip"
                    android:layout_marginLeft="@dimen/comment_8_dip"
                    android:background="@color/white"
                    app:textSize="@dimen/comment_14_size"
                    app:textColor="@color/alpha_95_black"
                    app:paddingLeft="@dimen/comment_5_dip"
                    app:paddingTopBottom="@dimen/comment_5_dip"
                    app:startDelayTime="2000"
                    app:reRepeatDelayTime="2000"
                    app:itemAnimationTime="2000"
                    />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/comment_330_dip"
                android:layout_height="@dimen/comment_2_dip"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/comment_5_dip"
                android:background="@color/alpha_05_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/comment_10_dip"
                android:layout_marginTop="@dimen/comment_10_dip">

                <LinearLayout
                    android:id="@+id/home_esthetics"
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/comment_35_dip"
                        android:layout_height="@dimen/comment_39_dip"
                        android:src="@drawable/icon_home_meixuehui" />

                    <TextView
                        android:textSize="@dimen/comment_14_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/aesthetic_remittance" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/comment_35_dip"
                        android:layout_height="@dimen/comment_39_dip"
                        android:src="@drawable/icon_home_manicure" />

                    <TextView
                        android:textSize="@dimen/comment_14_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/manicure" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/comment_35_dip"
                        android:layout_height="@dimen/comment_39_dip"
                        android:src="@drawable/icon_home_hairdcus" />

                    <TextView
                        android:textSize="@dimen/comment_14_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/hairdressing_custom" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/comment_35_dip"
                        android:layout_height="@dimen/comment_39_dip"
                        android:src="@drawable/icon_home_meirongmeiti" />

                    <TextView
                        android:textSize="@dimen/comment_14_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/cosmetology_and_body" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/comment_0_dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/comment_35_dip"
                        android:layout_height="@dimen/comment_39_dip"
                        android:src="@drawable/icon_home_lipstick" />

                    <TextView
                        android:textSize="@dimen/comment_14_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/semi_permanent" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/comment_10_dip"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="@dimen/comment_202_dip"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/comment_74_dip"
                    android:layout_height="@dimen/comment_14_dip"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/icon_home_newuserprg" />

                <TextView
                    android:layout_width="41dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/free_shipping"
                    android:textSize="8sp" />

                <ImageView
                    android:layout_width="93dp"
                    android:layout_height="@dimen/comment_114_dip"
                    android:layout_marginTop="@dimen/comment_5_dip"
                    android:src="@drawable/icon_home_minus" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/comment_202_dip"
                android:background="#4DC6C4C4" />

            <LinearLayout
                android:layout_width="@dimen/comment_0_dip"
                android:layout_height="@dimen/comment_202_dip"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="@dimen/comment_14_dip"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/icon_home_freetrial" />

                <TextView
                    android:layout_width="@dimen/comment_83_dip"
                    android:layout_height="9dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="5249人免费试用过"
                    android:textSize="8sp" />

                <LinearLayout
                    android:layout_width="@dimen/comment_83_dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/comment_5_dip">

                    <ImageView

                        android:layout_width="@dimen/comment_0_dip"
                        android:layout_height="@dimen/comment_38_dip"
                        android:layout_weight="1"
                        android:src="@drawable/icon_home_lipstick" />

                    <ImageView
                        android:layout_width="@dimen/comment_0_dip"
                        android:layout_height="@dimen/comment_38_dip"
                        android:layout_weight="1"
                        android:src="@drawable/icon_home_perfume" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/comment_5_dip"
                    android:background="@color/alpha_05_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="@dimen/comment_0_dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="@string/dily_special_price"
                            android:textColor="@color/alpha_95_black"
                            android:textSize="@dimen/comment_12_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="1元换10元劵"
                            android:textSize="@dimen/comment_8_size" />

                        <ImageView
                            android:layout_width="@dimen/comment_47_dip"
                            android:layout_height="@dimen/comment_47_dip"
                            android:layout_marginTop="@dimen/comment_5_dip"
                            android:src="@drawable/icon_home_special" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/alpha_05_black" />

                    <LinearLayout
                        android:layout_width="@dimen/comment_0_dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:text="@string/good_store"
                            android:textColor="@color/alpha_95_black"
                            android:textSize="@dimen/comment_12_size"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:text="人人都在买"
                            android:textSize="8sp" />

                        <ImageView
                            android:layout_width="@dimen/comment_47_dip"
                            android:layout_height="@dimen/comment_47_dip"
                            android:layout_marginTop="@dimen/comment_5_dip"
                            android:src="@drawable/icon_home_price" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/comment_10_dip">

            <ImageView

                android:layout_width="@dimen/comment_70_dip"
                android:layout_height="@dimen/comment_30_dip"
                android:src="@drawable/icon_home_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/comment_30_dip"
                android:layout_marginLeft="@dimen/comment_8_dip"
                android:gravity="center|left"
                android:text="@string/satisfy" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>